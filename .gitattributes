# LFS tracking for large files (binary, no text conversion)
*.spr.enc filter=lfs diff=lfs merge=lfs -text binary
*.dat.enc filter=lfs diff=lfs merge=lfs -text binary
*.dat filter=lfs diff=lfs merge=lfs -text binary
*.spr filter=lfs diff=lfs merge=lfs -text binary
data/things/**/*.dat.enc filter=lfs diff=lfs merge=lfs -text binary
data/things/**/*.spr.enc filter=lfs diff=lfs merge=lfs -text binary
data/things/1098/*.dat.enc filter=lfs diff=lfs merge=lfs -text binary
data/things/1098/*.spr.enc filter=lfs diff=lfs merge=lfs -text binary

# Text files with LF endings
*.json text eol=lf
*.md text eol=lf

# All other .enc files are binary
*.enc binary
